{
  "name": "react-ssr-boilerplate",
  "version": "1.0.0",
  "description": "Example of server-side rendering with React. Most notably this allows for client side hot module reloading during development. While using SSR and isomorphic rendering for production.",
  "type": "module",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 18.20.2",
    "npm": ">= 10.5.0"
  },
  "keywords": ["ssr", "react", "server-side-rendering", "isomorphic", "react-router", "webpack", "babel"],
  "author": {
    "name": "Kyle Melik",
    "email": "kyle@techbykyle.com",
    "url": "https://techbykyle.com"
  },
  "contributors": [],
  "scripts": {
    "clean": "rm -rf ./dist",
    "dev": "npm run clean && webpack serve --mode=development",
    "server": "ENABLE_SSR=true; npm run clean && webpack --config webpack.config.cjs && node ./dist/server.cjs"
  },
  "devDependencies": {
    "@babel/preset-env": "7.24.8",
    "@babel/preset-react": "7.24.7",
    "babel-loader": "9.1.3",
    "html-webpack-plugin": "5.6.0",
    "webpack": "5.93.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "process": "^0.11.10",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.25.1"
  }
}